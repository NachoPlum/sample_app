<li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content">
        <%= micropost.content %>
        <%= image_tag micropost.image.variant(:display) if micropost.image.attached? %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at)%> ago.
        <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, data: { "turbo-method": :delete, turbo_confirm: "You sure?"} %>
        <% end %>
    </span>
    <div id="like_form1_<%=micropost.id%>">
        <%= render partial: "microposts/like_form", locals: {micropost: micropost} %>

    </div>
</li>
