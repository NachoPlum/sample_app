<%#Este layout es justamente una template para que evita repetir codigo innecesario%>
<!DOCTYPE html>
<html>
  <head>
    <%# Aplica la estructura del titulo a todas las paginas que se rellenan con el provide en cada una de ellas a traves del "yield"%>
    <title><%= full_title(yield (:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta charset='utf-8'>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
    <%#Esto renderiza lo especificado en el partial _shim que seria el codigo de IE9 %>
    <%= javascript_importmap_tags %>

  </head>

  <body>
    <%= render "layouts/header"%>
    <div class="container">
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%# Este yield se rellena con lo que hay en cada pagina%>
    <%= yield %>
    <%= render "layouts/footer"%>
    <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
